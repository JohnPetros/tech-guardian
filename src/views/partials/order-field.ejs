<div class="order-field">
  <strong class="title">
    <img src="/assets/icons/<%= id %>.svg" width="20" height="20" alt="" />
    <%= title %>
  </strong>
  <textarea 
    data-textarea
    name="<%= id %>"
    id="<%= id %>"
    <%= isDisabled ? 'disabled' : '' %>
    <%= typeof hasAutoFocus !== 'undefined' && hasAutoFocus ? 'autofocus' : '' %>
    placeholder="<%= typeof placeholder !== 'undefined' && placeholder ? placeholder: '' %>"
    class="<%= isBig ? 'big' : '' %>"
  >
    <%= text %>
  </textarea>
</div>
