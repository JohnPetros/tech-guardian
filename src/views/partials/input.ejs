<div class="input-container">
  <label class="sr-only" for="<%= type %>"></label>
  <div class="content">
    <% if (typeof icon !== 'undefined') { %>
    <img src="/assets/icons/<%= icon %>.svg" width="24" height="24" alt="" />
    <% } %>

    <input
      type="<%= type %>"
      name="<%= type %>"
      id="<%= type %>"
      placeholder="<%= placeholder %>"
      class=""
    />
  </div>
</div>
