<!DOCTYPE html>
<body lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/user.css" />
    <script type="module" src="/scripts/user.mjs" defer></script>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <title>Tech Guardian | Usuário <%= user.name %></title>
</head>
    <%- include("../partials/header.ejs", { user: user }) %>

    <%- include("../partials/toasts.ejs", { type: 'error', messages: getFlashMessages('error') }) %>

    <%- include("../partials/toasts.ejs", { type: 'success', messages: getFlashMessages('success') }) %>

    <main class="container">

      <form class="form" action="" method="post" data-form>
        <fieldset class="inputs">
          <%-
            include(
              "../partials/input-avatar.ejs",
              {
                value: user.avatar,
                validations: [
                  { type: 'required' },
                ]
              }
            )
          %>

          <%-
            include(
              "../partials/input.ejs",
              {
                id: 'name',
                type: 'text',
                placeholder: 'Nome de usuário',
                icon: 'user',
                value: user.name,
                validations: [
                  { type: 'required' },
                  { type: 'min-length', value: 4 },
                ]
              }
            )
          %>

          <%-  
            include(
              "../partials/input.ejs",
              {
                id: 'email',
                type: 'text',
                icon: 'envelope-simple',
                placeholder: 'E-mail',
                value: user.email,
                validations: [
                  { type: 'required' },
                  { type: 'email' },
                ]
              }
            )
          %>    

          <div class="radios">
            <%- 
              include("../partials/radio.ejs", 
                { 
                  id: roles[0].id,
                  title: roles[0].title,
                  name: 'role_id',
                  color: 'purple',
                  isChecked: roles[0].id === user.role_id
                }) 
            %>
            <%- 
              include("../partials/radio.ejs",
                { 
                  id: roles[1].id,
                  title: roles[1].title,
                  name: 'role_id',
                  color: 'green',
                  isChecked: roles[1].id === user.role_id
                }) 
            %>
          </div>

        </fieldset>

        <div class="buttons">
          <button 
            id="edit"
            class="button purple" 
            name="action" 
            type="button" 
            data-button
          >
            <i class="icon ph-bold ph-key"></i>
            Editar senha
          </button>
          <button 
            id="edit"
            class="button green" 
            name="action" 
            value="/user/<%= user.id %>/edit" 
            type="button" 
            data-button
          >
            <i class="icon ph-bold ph-note-pencil"></i>
            Editar conta
          </button>
          <button 
            id="delete"
            class="button red" 
            name="action" 
            value="/user/<%= user.id %>/edit" 
            type="button" 
            data-button
          >
            <i class="icon ph-bold ph-trash"></i>
            Apagar conta
          </button>
        </div>
      </form>
    </main>
  </body>
</html>