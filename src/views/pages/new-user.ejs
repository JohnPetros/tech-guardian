<!DOCTYPE html>
<body lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/new-user.css" />
    <script type="module" src="/scripts/new-user.mjs" defer></script>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <title>Tech Guardian | Novo Usu치rio</title>
  </head>
  
    <%- include("../partials/header.ejs", { user: user }) %>

    <%- include("../partials/toasts.ejs", { type: 'error', messages: getFlashMessages('error') }) %>

    <%- include("../partials/toasts.ejs", { type: 'success', messages: getFlashMessages('success') }) %>
    

    <% const roleId = getFlashMessages('role_id')[0] %>


    <main class="container">

      <%- include("../partials/back-button.ejs", { page: '/users' }) %>

      <form class="form" action="/user/create" method="post" enctype="multipart/form-data" data-form>
        <fieldset class="inputs">
          <%-
            include(
              "../partials/input-avatar.ejs",
              {
                value: 'default.png',
                isEditable: true,
                validations: [
                  { type: 'required' },
                ]
              }
            )
          %>

          <%-
            include(
              "../partials/input.ejs",
              {
                id: 'name',
                type: 'text',
                placeholder: 'Nome de usu치rio',
                icon: 'user',
                value: getFlashMessages('name')[0] ?? '',
                validations: [
                  { type: 'required' },
                  { type: 'min-length', value: 4 },
                ]
              }
            )
          %>

          <%-  
            include(
              "../partials/input.ejs",
              {
                id: 'email',
                type: 'text',
                icon: 'envelope-simple',
                placeholder: 'E-mail',
                value: getFlashMessages('email')[0] ?? '',
                validations: [
                  { type: 'required' },
                  { type: 'email' },
                ]
              }
            )
          %>    

          <%- 
            include(
              "../partials/input.ejs",
              { 
                id: 'password',
                type: 'password',
                placeholder: 'Senha',
                icon: 'key',
                value: '',
                validations: [
                  { type: 'required' },
                  { type: 'password' },
                ]
              }
            ) 
          %>

          <%- 
            include(
              "../partials/input.ejs",
              { 
                id: 'password_confirmation',
                type: 'password',
                placeholder: 'Confirmar senha',
                icon: 'key',
                value: '',
                validations: [
                  { type: 'required' },
                  { type: 'equal', value: 'password' },
                ]
              }
            ) 
          %>

          <div>
            <p class="roles-question">Tipo de usu치rio</p>

            <div class="radios">

              <%- 
                include("../partials/radio.ejs", 
                  { 
                    id: roles[0].id,
                    title: roles[0].title,
                    name: 'role_id',
                    color: 'purple',
                    isChecked: !roleId ? true : roles[1].id === roleId ? true : false,
                  }) 
              %>

              <%- 
                include("../partials/radio.ejs",
                  { 
                    id: roles[1].id,
                    title: roles[1].title,
                    name: 'role_id',
                    color: 'green',
                    isChecked: roles[1].id === roleId,
                  }) 
              %>

              <%- 
                include("../partials/radio.ejs",
                  { 
                    id: roles[2].id,
                    title: roles[2].title,
                    name: 'role_id',
                    color: 'yellow',
                    isChecked: roles[2].id === roleId,
                  }) 
              %>
            </div>
        
          </div>

        </fieldset>

          <button 
            class="button green" 
            type="submit"
            data-button
          >
            <i class="icon ph-bold ph-user"></i>
            Cadastrar usu치rio
          </button>
      </form>
    </main>

    <%- include("../partials/modal.ejs") %>
  </body>
</html>