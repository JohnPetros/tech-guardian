<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/login-page.css" />
    <script src="/scripts/login-page.mjs" defer type="module"></script>
    <title>Tech Guardian | login</title>
  </head>
  <body>
    <%- include("../partials/header.ejs") %>

    <main class="container">

      <% messages.forEach(message => { %>
        <%- include("../partials/toast.ejs", { type: message.type, body: message.body }) %>
    <% }) %>

      <form action="/login" method="POST" data-form>
        <fieldset>
          <legend>Acesse sua conta</legend>

          <div class="inputs">
            <%-
             include(
                "../partials/input.ejs",
                {
                  type: 'email',
                  placeholder: 'E-mail',
                  icon: 'mail',
                  value: email,
                  validations: ['string', 'required', 'email']
                 }
              )
             %>
            <%- 
              include(
                "../partials/input.ejs",
                { 
                  type: 'password',
                  placeholder: 'Senha',
                  icon: 'key',
                  value: password,
                  validations: ['string', 'required', 'password']
                }
              ) 
            %>
          </div>
        </fieldset>

        <%- include("../partials/button.ejs", { type: 'submit', title: 'Entrar',  })
        -%>
      </form>

      <%- include("../partials/link.ejs", { href: 'register', title: 'Criar conta' }) -%>
    </main>

  </body>
</html>
