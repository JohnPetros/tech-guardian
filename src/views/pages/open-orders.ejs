<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/open-orders.css" />
    <script type="module" src="/scripts/open-orders.mjs" defer></script>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <title>TechGuardian | Solicitações abertas</title>
  </head>
  <body>
    <%- include("../partials/header.ejs", { user: user }) %>

    <%- include("../partials/toasts.ejs", { type: 'success', messages: getFlashMessages('success') }) %>

    <%- include("../partials/toasts.ejs", { type: 'error', messages: getFlashMessages('error') }) %>

    <main class="container">
      <div class="navigation">
        <div>
          <h2>Solicitações</h2>
          <span class="amount"><%= openOrdersCount %></span>
        </div>

        <nav>
          <ul>
            <li>
              <a href="/open-orders" class="nav-link yellow">Em andamento</a>
            </li>
            <li>
              <a href="/closed-orders" class="nav-link">Finalizados</a>
            </li>
          </ul>
        </nav>
      </div>

      <form>
        <ul class="order-filters">

          <li class="order-filter">
            <%-
              include(
                "../partials/input.ejs",
                  {
                    id: 'search',
                    type: 'search',
                    placeholder: 'Pesquisar solicitação por nome',
                    icon: 'magnifying-glass',
                    value: search,
                    validations: []
                  }
                )
              %>
          </li>

          <li class="order-filter">
            <%-
              include(
                "../partials/checkbox-list.ejs",
                  {
                    name: 'patrimonies_ids',
                    items: patrimonies.map(patrimony => ({ id: patrimony.id, value: patrimony.number })),
                    checkedItemsIds: patrimonies_ids
                  }
                )
              %>
          </li>

        </ul>

      </form>

      <% if (user.role === 'tech') { %>
         <a class="new-order-button" href="/new-order">
          <img src="assets/icons/plus.svg" width="16" height="16" alt="">
          Abrir nova solicitação
        </a>
      <% } %>

      <% if (!openOrders.length) { %>
          <p class="no-orders-found-message">Nenhuma solicitação encontrada.</p>
     <% } %>

      <div class="order-cards">
        <% openOrders.forEach(order => { %> 
          <%-
            include("../partials/order-card.ejs", 
              { 
                isOpen: true,
                id: order.id,
                title: order.title,
                createdBy: order.created_by,
                patrimonyNumber: order.patrimony_number,
                createdAt: order.created_at,
              }) %> 
          <% }) %>
      </div>

      <% if (openOrdersCount > 9) { %>
        <%- include("../partials/pagination.ejs", { pages: Math.ceil(openOrdersCount / 9), currentPage: page }) %>
     <% } %>

    </main>

    <%- include("../partials/modal.ejs") %>
  </body>
</html>
